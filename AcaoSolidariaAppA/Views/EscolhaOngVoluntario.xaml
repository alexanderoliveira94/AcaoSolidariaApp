<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcaoSolidariaAppA.Views.EscolhaOngVoluntario"
             Title="EscolhaOngVoluntario">
    <ScrollView>
        <VerticalStackLayout>
            <Grid>
                <Image x:Name="Fundo" Source="background4.jpg" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" VerticalOptions="FillAndExpand" Aspect="AspectFill" IsVisible="true" HeightRequest="1000"/>

                <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                    <Image x:Name="LogoApp" Source="logo.png" 
                WidthRequest="200"
                HeightRequest="200"
                Aspect="AspectFit"
                TranslationY="-300"/>

                    

                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="End" Spacing="20">
                        <Button
                     x:Name="OngBtn"
                     Text="ONG"
                     VerticalOptions="CenterAndExpand"
                     HorizontalOptions="FillAndExpand"
                     MinimumWidthRequest="150" 
                     Clicked="OngBtn_Clicked"
                     TranslationY="-100">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="BackgroundColor" Value="#008000" />
                                    <Setter Property="TextColor" Value="White" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="CornerRadius" Value="15" />
                                    <Setter Property="Padding" Value="10,5" />
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button
                      x:Name="VoluntarioBtn"
                     Text="VOLUNTÃRIO"
                     VerticalOptions="CenterAndExpand"
                     HorizontalOptions="FillAndExpand"
                     MinimumWidthRequest="150" 
                     Clicked="VoluntarioBtn_Clicked"
                     TranslationY="-100">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="BackgroundColor" Value="Green" />
                                    <Setter Property="TextColor" Value="White" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="CornerRadius" Value="15" />
                                    <Setter Property="Padding" Value="10,5" />
                                    <Setter Property="BorderColor" Value="#0078D4" />
                                    <Setter Property="BorderWidth" Value="1" />
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackLayout>


                </Grid>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
